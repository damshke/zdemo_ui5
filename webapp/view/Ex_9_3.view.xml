<mvc:View
	controllerName="zdemo_ui5.controller.Ex_9_3"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true">

    <Table items="{/data}" headerText="Carriers" mode="SingleSelectMaster"
           selectionChange="onCarrierSelectionChange">
        <columns>
            <Column>
                <header>
                    <Text text="ID"/>
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Carrier name"/>
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Currency"/>
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="URL"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{carrier/carrId}"/>
                    <Text text="{carrier/carrName}"/>
                    <Text text="{carrier/cuccCode}"/>
                    <Text text="{carrier/url}"/>
                    
                </cells>
            </ColumnListItem>
        </items>
    </Table>

    <Table id="idConnTable" items="{connections}" headerText="Flight connections">
        <columns>
            <Column>
                <header>
                    <Text text="Connection ID"/>
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="City from"/>
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="City to"/>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{connId}"/>
                    <Text text="{cityFrom}"/>
                    <Text text="{cityTo}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>

<!-- в этом задании нет модели, просто написала view и controller, т.к.
модель там даётся по заданию, и в целом принцип работы уже понятен -->